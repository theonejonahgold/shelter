<html lang=en>
<meta charset=utf8>
<meta name=viewport content=width=device-width,initial-scale=1>
<link rel="shortcut icon" type=image/x-icon href=data:image/x-icon;,>
<title>Add animal | Shelter</title>
<link rel=stylesheet href=/index.css>
<main class="container">
  <form action="/" method="post" enctype="multipart/form-data">
    <label>
      Image
      <input type="file" name="image" accept="image/jpeg">
    </label>
    <label>
      Name*
      <input type="text" name="name" required>
    </label>
    <label>
      Animal type*
      <select name="type" required>
        <option value="1">Dog</option>
        <option value="2">Cat</option>
        <option value="3">Rabbit</option>
      </select>
    </label>
    <label>
      Description
      <textarea name="description" cols="30"></textarea>
    </label>
    <label>
      Animal Shelter*
      <select name="place" required>
        <option value="1">Brooklyn Animal Care Center</option>
        <option value="2">Manhattan Animal Care Center</option>
        <option value="3">Staten Island Animal Care Center</option>
      </select>
    </label>
    <label>
      Date of intake*
      <input type="date" name="intake" required>
    </label>
    <fieldset>
      <legend>Sex*</legend>
      <label>
        <input type="radio" name="sex" value="2" required>
        Female
      </label>
      <label>
        <input type="radio" name="sex" value="1" required>
        Male
      </label>
    </fieldset>
    <label>
      Age in years*
      <input type="number" name="age" required>
    </label>
    <label>
      Weight
      <input type="number" name="weight" step="0.1">
    </label>
    <fieldset>
      <legend>Size</legend>
      <label>
        <input type="radio" name="size" value="1">
        Small
      </label>
      <label>
        <input type="radio" name="size" value="2">
        Medium
      </label>
      <label>
        <input type="radio" name="size" value="3">
        Large
      </label>
    </fieldset>
    <fieldset>
      <legend>Length</legend>
      <label>
        <input type="radio" name="length" value="1">
        Short
      </label>
      <label>
        <input type="radio" name="length" value="2">
        Medium
      </label>
      <label>
        <input type="radio" name="length" value="3">
        Long
      </label>
    </label>
    </fieldset>
    <fieldset>
      <legend>Coat</legend>
      <label>
        <input type="radio" name="coat" value="1">
        Smooth
      </label>
      <label>
        <input type="radio" name="coat" value="2">
        Thick
      </label>
    </fieldset>
    <fieldset>
      <legend>Vaccinated*</legend>
      <label>
        <input type="radio" name="vaccinated" value="1" required>
        Yes
      </label>
      <label>
        <input type="radio" name="vaccinated" value="0" required>
        No
      </label>
    </fieldset>
    <fieldset>
      <legend>Declawed</legend>
      <label>
        <input type="radio" name="declawed" value="1">
        Yes
      </label>
      <label>
        <input type="radio" name="declawed" value="0">
        No
      </label>
    </fieldset>
    <fieldset>
      <legend>Colours</legend>
      <label>Primary Color*
        <input type="text" name="primary_color" required>
      </label>
      <label>Secondary Color
        <input type="text" name="secondary_color">
      </label>
    </fieldset>
    <input type="submit" value="Submit Animal">
  </form>
</main>
