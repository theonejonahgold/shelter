<!doctype html>
<html lang=en>
<meta charset=utf8>
<meta name=viewport content=width=device-width,initial-scale=1>
<link rel="shortcut icon" type=image/x-icon href=data:image/x-icon;,>
<title>Shelter</title>
<link rel=stylesheet href=/index.css>
<main>
  <h1>Shelter</h1>
  <a href="/add">Add animal</a>
  <div class=grid>
    <% data.forEach(function (entity) { %>
    <article class=animal>
      <a class="frame block-link" href="/<%= entity.slug %>">
        <figure class="frame-image frame-image-reveal">
          <img src="/image/<%= entity.file %>" alt>
          <figcaption>
            <p><%= description(entity) %></p>
          </figcaption>
        </figure>
        <h2><%= entity.name %></h2>
        <p class=capitalize><%= entity.sex %> Â· <%= entity.age %> <%= plural('year', entity.age) %> old</p>
      </a>
    </article>
    <% }) %>
  </div>
</main>
<script src=/index.js></script>
